    <![endif]-->

    <script src="/assets/modernizr-2.8.3.min.js" type="text/javascript"></script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

  <!-- header -->

  <header id="header" class="header">
    <div class="container-fluid">
      <hgroup>

        <!-- logo -->

        <p class="n-icon" > <a href="index2.html" title="Picxa">MinDilog</a>
          <% if user_signed_in? %>
              <h1 class="nn-icon"> <br> with <%= current_user.email %></h1>
          <% end  %>
        </p>

        <!-- logo -->

        <!-- nav -->


        <nav>
          <div class="menu-expanded">
            <div class="nav-icon">
              <b><a href="/">Home</a></b>/
              <b><a href="/about/about.html">About</a></b>/
              <b><a href="/blog/blog.html">blog</a></b>/
              <b><a href="/contact/contact.html">contact</a></b>/
              <% if user_signed_in? %>
                  <b><a href="/users/sign_out">logout</a></b>/

            <% else %>
                  <b><a href="/users/sign_in">login</a></b>/
            <% end %>
            </div>
          </div>
        </nav>

        <!-- nav -->

      </hgroup>
    </div>
  </header>

  <!-- header -->

  <%= yield %>

    <!-- jQuery -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/assets/jquery.min.js"><\/script>')</script>
    <script src="/assets/plugins.js" type="text/javascript"></script>
    <script src="/assets/bootstrap.min.js" type="text/javascript"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script src="/assets/maps.js" type="text/javascript"></script>
    <script src="/assets/custom.js" type="text/javascript"></script>
    <script src="/assets/jquery.contact.js" type="text/javascript"></script>
    <script src="/assets/main.js" type="text/javascript"></script>
    <script src="/assets/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="/assets/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="/assets/jquery.infinitescroll.min.js" type="text/javascript"></script>
    <script src="/assets/main.js" type="text/javascript"></script>
    <script src="/assets/jquery.nicescroll.min.js" type="text/javascript"></script>
  </body>
